<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:MauiTabbedApp"
    x:Class="MauiTabbedApp.ReproHistoryView"
    x:DataType="vm:ReproHistoryViewModel">
    
    <VerticalStackLayout  Padding="20" Spacing="20" BackgroundColor="LightGray">
        
        <Label Text="Issue History" 
               FontAttributes="Bold"
               FontSize="22"
               HorizontalOptions="Center" />
        
        <Button Text="Contact Permissions"
                Command="{Binding NavigateToContactPermissionsCommand}" />
        
        <Button Text="Open Modal"
                Command="{Binding NavigateToOpenModalCommand}" />
        
                
        <Button Text="CollectionView" 
                Command="{Binding OpenCollectionViewCommand}"></Button>
        
        <Button Text="Open navigate to root modal" Command="{Binding OpenNavigateToRootModalCommand}"/>
        
                
        <Button Text="Display Action Sheet" Command="{Binding OpenActionSheetCommand}"/>
        
    </VerticalStackLayout>
    
</ContentPage>
