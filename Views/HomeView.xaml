<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:MauiTabbedApp"
    x:Class="MauiTabbedApp.HomeView"
    x:DataType="vm:HomeViewModel">

    <VerticalStackLayout Padding="20" Spacing="20" BackgroundColor="LightGray">
        
        <Label Text="Issue" 
               FontAttributes="Bold"
               FontSize="22"
               HorizontalOptions="Center" />
        
        <Button Text="CollectionView" Command="{Binding OpenCollectionViewCommand}"></Button>
        
    </VerticalStackLayout>
</ContentPage>
